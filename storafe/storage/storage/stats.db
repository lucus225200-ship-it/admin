-- ၁။ Entities Table (Channel/Group အချက်အလက်များ သိမ်းဆည်းရန်)
CREATE TABLE IF NOT EXISTS entities (
    chat_id TEXT PRIMARY KEY,    -- Telegram Chat ID
    title TEXT,                  -- နာမည်
    member_count INTEGER,        -- Member အရေအတွက်
    type TEXT                    -- 'channel' သို့မဟုတ် 'group'
);

-- ၂။ Stats Table (စာရင်းဇယား ၂၁ မျိုးအတွက် ဒေတာများ သိမ်းဆည်းရန်)
CREATE TABLE IF NOT EXISTS stats (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    date TEXT,                   -- ရက်စွဲ (YYYY-MM-DD)
    type TEXT,                   -- စာရင်းဇယားအမျိုးအစား (ဥပမာ 'joined', 'left', 'views')
    count INTEGER DEFAULT 0      -- အရေအတွက်
);

